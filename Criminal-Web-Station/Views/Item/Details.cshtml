@model ItemInputFormModel
@inject UserManager<Account> userManager

@{
    ViewData["Title"] = "Details";
}
<div class="container">
    <h1 class="my-4">
        @Model.Name
        <small class="blockquote-footer">added by user @this.userManager.GetUserAsync(this.User).Result.UserName</small>
    </h1>

    <div class="row">

        <div class="col-md-8">
            <img class="img-fluid" src="@Model.MainImgUrl" alt="">
        </div>

        <div class="col-md-4 border border-secondary mx-auto">
            <h3 class="my-3">Description</h3>
            <p style="word-wrap:break-word">@Model.Description</p>
            <h3 class="my-3">Other Details</h3>
            <ul>
                <li>Weight - @Model.Weight kg</li>
            </ul>
            <a asp-controller="ShoppingCart" asp-action="Buy" asp-route-id="@Model.Id" class="btn btn-info mt-5 ml-3">Add To Cart</a>
        </div>
        <div class="display-4">Price: $@Model.Price</div>
    </div>

    <h3 class="my-4">Other images</h3>

    <div class="row">

        <div class="col-md-3 col-sm-6 mb-4">
            <a href="#">
                <img class="img-fluid" src="http://placehold.it/500x300" alt="">
            </a>
        </div>

        <div class="col-md-3 col-sm-6 mb-4">
            <a href="#">
                <img class="img-fluid" src="http://placehold.it/500x300" alt="">
            </a>
        </div>

        <div class="col-md-3 col-sm-6 mb-4">
            <a href="#">
                <img class="img-fluid" src="http://placehold.it/500x300" alt="">
            </a>
        </div>

        <div class="col-md-3 col-sm-6 mb-4">
            <a href="#">
                <img class="img-fluid" src="http://placehold.it/500x300" alt="">
            </a>
        </div>

    </div>
</div>
