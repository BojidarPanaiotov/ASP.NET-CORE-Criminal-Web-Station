<h3 class="text-center mb-5">Shopping Cart</h3>
<table class="table table-bordered col-md-10 mx-auto">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Option</th>
            <th scope="col">Name</th>
            <th scope="col">Photo</th>
            <th scope="col">Price</th>
        </tr>
    </thead>
    @foreach (var item in ViewBag.cart)
    {
        <tr>
            <td class="align-items-center"><a asp-controller="ShoppingCart" asp-action="Remove" asp-route-id="@item.Id">Remove</a></td>
            <td >@item.Name</td>
            <td><img src="@item.MainImgUrl" width="150" height="110" /> </td>
            <td>@item.Price</td>
        </tr>
    }
    <tr>
        <td align="right" colspan="6"><h4>Sum @ViewBag.total</h4></td>
    </tr>
</table>
<br>
<a asp-controller="Market" asp-action="All">Continue Shopping</a>